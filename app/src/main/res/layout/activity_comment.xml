<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Views.Comment">

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/back"
            android:id="@+id/imageView"
            android:alpha=".4"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"/>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="320dp"
            android:layout_height="170dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="637dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="45dp" android:layout_marginEnd="46dp" app:layout_constraintEnd_toEndOf="parent">

        <TextView
                android:text="Univerzijada 2020"
                android:textSize="36dp"
                android:textColor="@android:color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView11" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="320dp"
            android:layout_height="289dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="209dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="325dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="45dp" android:layout_marginEnd="46dp" app:layout_constraintEnd_toEndOf="parent">

        <TextView
                android:text="Ostavite ocenu i komentar na smestaj/restoran"
                android:textSize="27dp"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView12"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="128dp" android:layout_marginEnd="135dp"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.486"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="16dp"
                app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="254dp"
                app:layout_constraintVertical_bias="0.2"/>
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:hint="Ocena(1-5)"
                android:textSize="18dp"
                android:textColor="@android:color/black"
                android:ems="10"
                android:id="@+id/username"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="108dp" app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="162dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="135dp" android:layout_marginEnd="134dp"
                app:layout_constraintEnd_toEndOf="parent"/>
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:hint="Komentar"
                android:textSize="18dp"
                android:ems="10"
                android:id="@+id/password"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="158dp" app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="112dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="135dp" android:layout_marginEnd="134dp"
                app:layout_constraintEnd_toEndOf="parent"/>
        <Button
                android:text="Posalji"
                android:textSize="18dp"
                android:textColor="@android:color/black"
                android:background="@android:color/holo_green_dark"
                android:layout_width="125dp"
                android:layout_height="50dp"
                android:id="@+id/sendComment"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="223dp" app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="16dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="98dp" android:layout_marginEnd="97dp"
                app:layout_constraintEnd_toEndOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>