<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Views.Request">
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/back"
            android:id="@+id/imageView"
            android:alpha=".4"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"/>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="320dp"
            android:layout_height="170dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="637dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="45dp" android:layout_marginEnd="46dp" app:layout_constraintEnd_toEndOf="parent">

        <TextView
                android:text="Univerzijada 2020"
                android:textSize="36dp"
                android:textColor="@android:color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView11" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="320dp"
            android:layout_height="289dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="209dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="325dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="45dp" android:layout_marginEnd="46dp" app:layout_constraintEnd_toEndOf="parent">

        <TextView
                android:text="Zahtev za promenu"
                android:textSize="28dp"
                android:textColor="@android:color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView12"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="128dp" android:layout_marginEnd="135dp"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="16dp"
                app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="254dp"/>
        <TextView
                android:text="smestaja ili restorana"
                android:textSize="28dp"
                android:textColor="@android:color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView8"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="54dp"
                app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="198dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="26dp"
                android:layout_marginEnd="26dp" app:layout_constraintEnd_toEndOf="parent"/>
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:hint="Razlog"
                android:textSize="18dp"
                android:ems="10"
                android:id="@+id/reason"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="169dp" app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="101dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="135dp" android:layout_marginEnd="134dp"
                app:layout_constraintEnd_toEndOf="parent"/>
        <Button
                android:text="Posalji zahtev"
                android:textSize="18dp"
                android:textColor="@android:color/black"
                android:background="@android:color/holo_green_dark"
                android:layout_width="125dp"
                android:layout_height="50dp"
                android:id="@+id/sendRequest"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="223dp" app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="16dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="98dp" android:layout_marginEnd="97dp"
                app:layout_constraintEnd_toEndOf="parent"/>
        <RadioGroup
                android:layout_width="222dp"
                android:layout_height="33dp"
                android:orientation="horizontal" app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="104dp" app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="152dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="49dp" android:layout_marginEnd="49dp"
                app:layout_constraintEnd_toEndOf="parent">
            <RadioButton
                    android:text="Smestaj"
                    android:textSize="18dp"
                    android:checked="true"
                    android:textColor="@android:color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" tools:layout_editor_absoluteY="106dp"
                    tools:layout_editor_absoluteX="37dp" android:id="@+id/radioButton3"/>
            <RadioButton
                    android:text="Restoran"
                    android:textSize="18dp"
                    android:textColor="@android:color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" tools:layout_editor_absoluteY="106dp"
                    tools:layout_editor_absoluteX="172dp" android:id="@+id/radioButton4"/>
        </RadioGroup>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>