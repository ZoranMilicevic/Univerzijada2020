<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Views.PasswordChange">
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/back"
            android:id="@+id/imageView"
            android:alpha=".4"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"/>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="320dp"
            android:layout_height="170dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="637dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="45dp" android:layout_marginEnd="46dp" app:layout_constraintEnd_toEndOf="parent">

        <TextView
                android:text="Univerzijada 2020"
                android:textSize="36dp"
                android:textColor="@android:color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView11" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="320dp"
            android:layout_height="343dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="209dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="271dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="45dp" android:layout_marginEnd="46dp" app:layout_constraintEnd_toEndOf="parent">

        <TextView
                android:text="Promena lozinke"
                android:textSize="28dp"
                android:textColor="@android:color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView12"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="7dp" app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="299dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="53dp" android:layout_marginEnd="60dp"
                app:layout_constraintEnd_toEndOf="parent"/>
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:hint="Stara lozinka"
                android:textSize="18dp"
                android:textColor="@android:color/black"
                android:ems="10"
                android:id="@+id/oldPass"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="75dp" app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="249dp" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"/>
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:hint="Nova lozinka"
                android:textSize="18dp"
                android:ems="10"
                android:id="@+id/newPass"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="126dp" app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="198dp" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"/>
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:hint="Ponovite novu lozinka"
                android:textSize="18dp"
                android:ems="10"
                android:id="@+id/newPass2" app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="177dp"
                app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="147dp"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintEnd_toEndOf="parent"/>
        <Button
                android:text="Promeni lozinku"
                android:textSize="18dp"
                android:textColor="@android:color/black"
                android:background="@android:color/holo_green_dark"
                android:layout_width="125dp"
                android:layout_height="50dp"
                android:id="@+id/passwordChangeButton"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="242dp" app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="51dp" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>